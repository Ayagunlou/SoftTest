@model Data_Access_Layer.Repository.Models.UserModel

<body>
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">
            <form asp-action="Regis" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-md-5 mt-md-4 pb-5">
               
              <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
              <p class="text-white-50 mb-5"></p>

              <div class="form-outline form-white mb-4">
                <input  asp-for="UserName" type="text" id="typeEmailX" class="form-control form-control-lg" />
                <label asp-for="UserName" class="form-label" for="typeEmailX">Username</label>
                <span asp-validation-for="UserName" class="text-danger"></span>
              </div>

              <div class="form-outline form-white mb-4">
                <input asp-for="Password" type="password" id="typePasswordX" class="form-control form-control-lg" />
                <label asp-for="Password" class="form-label" for="typePasswordX">Password</label>
                <span asp-validation-for="Password" class="text-danger"></span>
              </div>

              <button class="btn btn-outline-light btn-lg px-5" type="submit">Submit</button>
            </div>
             </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
